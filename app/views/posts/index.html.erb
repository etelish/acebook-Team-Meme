<% @posts.each do |post| %>
  <% @post = post %>
  <p><%= post.message %></p>
  <p><%= post.id %></p>
  <p><%= link_to 'Show_single_post', post_path(post),
              method: :get %> </p>
  <p><%= link_to 'Edit', edit_post_path(post),
              method: :get %> </p>
  <p><%= link_to 'Delete', post_path(post), class: "#{post.id}",
              method: :delete %> </p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
